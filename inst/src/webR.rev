input<-gsub("DoEckCloseKl-esc","]]",gsub("DoEckOpenKl-esc","[[",input))

@
<<schreibe die Makrodefinition für Randnummern vor die erste Zeile>>=
input[1]<-paste(
     "\\newcounter{Rchunkno}",
     "\\newcommand{\\makemarginno}{\\stepcounter{Rchunkno}",
